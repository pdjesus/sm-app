<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse">    
      <ul class="nav navbar-nav navbar-left">
        <li>{{#link-to 'clientes.new'}}Nuevo Cliente{{/link-to}}</li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="row">

  <div class="col-sm">
    <table class="table">
      <thead>
        <tr>
          <th>NOMBRE</th>
          <th>DNI</th>
          <th>DOMICILIO</th>
          <th>TELEFONO</th>
          <th>EMAIL</th>
          <th>CIUDAD</th>
          <th>ACCIONES</th>
        </tr>
      </thead>
      <tbody>
        {{#each filteredModel as |item|}}
        <tr>
          <td>{{item.nombre}}</td>
          <td>{{item.dni}}</td>
          <td>{{item.domicilio}}</td>
          <td>{{item.telefono}}</td>
          <td>{{item.email}}</td>
          <td>{{item.ciudad.nombre}}</td>
          <td>
            {{#link-to 'clientes.ficha' item.id classNames="btn btn-default btn-xs"}}Ficha{{/link-to}}
            {{#link-to 'clientes.edit' item.id classNames="btn btn-default btn-xs"}}Modificar{{/link-to}}
            <button class="btn btn-default btn-xs" {{action 'delete' item}}>Eliminar</button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>  
</div>


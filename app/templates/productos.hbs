<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse">    
      <ul class="nav navbar-nav navbar-left">
        <li>{{#link-to 'productos.new'}}Nuevo Producto{{/link-to}}</li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="row">

  <div class="col-sm">
    <table class="table">
      <thead>
        <tr>
          <th>CODIGO</th>
          <th>DESCRIPCION</th>
          <th>PRECIO VENTA</th>
          <th>ACCIONES</th>
        </tr>
      </thead>
      <tbody>
        {{#each filteredModel as |item|}}
        <tr>
          <td>{{item.codigo}}</td>
          <td>{{item.texto}}</td>
          <td>{{formatCurrency item.precioVenta}}</td>
          <td>
            {{#link-to 'productos.edit' item.id classNames="btn btn-default btn-xs"}}Modificar{{/link-to}}
            <button class="btn btn-default btn-xs" {{action 'delete' item}}>Eliminar</button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>  
</div>


<div class="row">

  <div class="col-sm">
    <table class="table">
      <thead>
        <tr>
          <th>FECHA PEDIDO</th>
          <th>CLIENTE</th>
          <th>DNI</th>
          <th>PRODUCTO</th>
          <th>TALLE</th>
          <th>CANTIDAD</th>
          <th>ENTREGA</th>
          <th>ESTADO</th>
        </tr>
      </thead>
      <tbody>
        {{#each filteredModel as |item|}}
        <tr>
          <td>{{moment-format item.fechaPedido}}</td>
          <td>{{item.ficha.cliente.nombre}}</td>
          <td>{{item.ficha.cliente.dni}}</td>
          <td>{{item.producto.texto}}</td>
          <td>{{item.talle.talle}}</td>
          <td>{{item.cantidad}}</td>
          <td>{{format-currency item.entrega}}</td>
          <td>{{item.estado}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
